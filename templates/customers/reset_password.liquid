<section class="o-section c-reset-password o-form c-form-reset-password">

    {% form 'reset_customer_password' %}

        <h1 class="o-form__title o-title-1">{{ 'templates.login.reset_password' | t }}</h1>

        {% assign form_id = 'reset-password' %}

        <div class="o-form__input-box">
            <input type="password" data-password-group="{{ form_id }}" name="customer[password]" id="{{ form_id }}-password" class="o-input" aria-label="{{ 'snippets.form.new_password.placeholder' | t }}" aria-required="true" required size="16"/>
            <label class="o-label u-smooth" for="{{ form_id }}-password">
                {{ 'snippets.form.new_password.title' | t }}
            </label>
        </div>

        <div class="o-form__input-box">
            <input type="password" name="customer[password_confirmation]" data-password-group="{{ form_id }}" id="{{ form_id }}-password-repeat" class="o-input" aria-label="{{ 'snippets.form.new_password_repeat.placeholder' | t }}" aria-required="true" required size="16"/>
            <label class="o-label u-smooth" for="{{ form_id }}-password-repeat">
                {{ 'snippets.form.new_password_repeat.title' | t }}
            </label>
        </div>

        <div class="o-form__action-group o-form__action-group--submit u-mt-1 c-form-reset-password__action-group">
            <button type="submit" title="{{ 'snippets.form.submit.reset_password' | t }}" class="o-button o-form__action o-form__action--bordered o-form__action--cta">
                {{ 'snippets.form.submit.reset_password' | t }}
            </button>
        </div>

        {% if form.errors | size > 0 %}
            <ul class="o-list o-form__notes o-form__notes--centered">
                {% for field in form.errors %}
                    <li class="o-list__item o-form__note o-form__note--fail">
                        {% if field == 'form' %}
                            {{ form.errors.messages[field] }}
                        {% else %}
                            {{ form.errors.translated_fields[field] }}
                            -
                            {{ form.errors.messages[field] }}
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

    {% endform %}

</section>