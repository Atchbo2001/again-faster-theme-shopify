<ul class="o-list c-collection__tabs">

    {% for block in section.blocks %}

        {% assign is_current_tab = false %}

        {% if collection.id == block.settings.collection.id %}
            {% assign is_current_tab = true %}
        {% endif %}

        <li class="o-list__item c-collection__tab">
            <a class="o-button c-collection__tab-button" href="{{ block.settings.collection.url }}" data-is-current={{ is_current_tab }}>
                {{ block.settings.collection.title }}
            </a>
        </li>

    {% endfor %}

</ul>


{% schema %}
{
    "name": "Collection tabs",
    "tag": "div",
    "class": "c-collection__tabs-box",
    "blocks": [
        {
            "name": "Collection",
            "type": "collection",
            "settings": [
                {
                    "type": "collection",
                    "id": "collection",
                    "label": "Collection"
                }
            ]
        }
    ]
}
{% endschema %}