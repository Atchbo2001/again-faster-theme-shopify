.c-product-item__image-box {
  width: 100%;
  height: 0;
  padding-top: 125%;
  position: relative;
  background-color: var(--color-bg-2);
}

.c-product-item__image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 10;
}

.c-product-item__copy,
.c-product-item__prices {
  gap: 0.75rem;
}

.c-product-item__copy {
  display: grid;
  grid-auto-flow: row;
}

.c-product-item__prices {
  display: flex;
  flex-wrap: wrap;
}

.c-product-item__price--old {
  color: var(--color-text-3);
}

.c-product-item__features {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  justify-items: flex-start;
  align-content: flex-start;
  align-items: flex-start;
  gap: 0.5rem;
  padding: 0.5rem;
  z-index: 100;
}

.c-product-item__feature {
  padding: 0.75em 1em;
  font-size: 1.2em;
  border: solid 0.1em transparent;
}

.c-product-item__sold-out-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.c-product-item__in-sale-text {
  color: var(--color-text-bg);
  background-color: var(--color-fail);
}

.c-product-item__sold-out-text,
.c-product-item__free-shipping-text {
  background-color: var(--color-text-bg);
}

.c-product-item__bestseller-text {
  color: var(--color-text-bg);
  background-color: var(--color-text);
}

.c-product-item__can-be-pre-ordered-text {
  background-color: transparent;
  border-color: var(--color-text-3);
}

.c-product-item [data-is-available="false"] .c-product-item__features {
  background-color: hsla(0, 0%, 100%, 0.5);
}

.c-product-item [data-is-available="false"] .c-product-item__price {
  text-decoration: line-through;
}
