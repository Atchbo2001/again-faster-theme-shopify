.c-hero {
  height: 100vh;
  width: 100%;
  display: grid;
  align-items: end;
  justify-items: start;
}

.c-hero__background-box,
.c-hero__copy {
  position: relative;
}

.c-hero__background-box,
.c-hero__background-image {
  width: 100%;
  height: 100%;
}

.c-hero__background-box {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}

.c-hero__background-image {
  display: block;
  object-fit: cover;
}

.c-hero__copy {
  z-index: 20;
  padding: var(--side-distance-2) var(--side-distance-1);
  max-width: 70ch;
  display: grid;
  grid-auto-flow: row;
  gap: 1rem;
  justify-content: start;
  justify-items: start;
}

.c-hero__copy,
.c-hero__cta {
  color: var(--color-text-bg);
}

.c-hero__cta:hover,
.c-hero__cta:focus {
  color: var(--color-text-bg-focus);
}

.c-hero__title,
.c-hero__cta {
  text-transform: uppercase;
  letter-spacing: 0.24em;
}

.c-hero__title {
  font-size: 4rem;
  font-weight: 700;
  line-height: 1.2;
}

.c-hero__description {
  font-size: 0.888rem;
}

.s-hero-richtext * {
  line-height: 2em;
}

.c-hero__cta {
  padding: 0.777rem 1rem;
  border: 0.1rem solid var(--color-text-bg);
  min-width: 15rem;
  justify-content: space-between;
  margin-top: 1rem;
}
