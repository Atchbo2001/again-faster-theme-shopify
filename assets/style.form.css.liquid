.o-form form {
  position: relative;
  display: grid;
  grid-auto-flow: row;
  align-content: start;
  gap: 0.5rem;
}

.o-input {
  padding: 1rem 0;
  font-size: 0.75em;
  border-bottom: solid 0.1em var(--color-text-3);
  width: 100%;
}

.o-form__notes {
  font-size: 0.84em;
}

.o-form__note--success {
  color: var(--color-success);
}

.o-form__note--fail {
  color: var(--color-fail);
}
