.o-form form {
  position: relative;
  display: grid;
  grid-auto-flow: row;
  align-content: start;
  gap: 2rem;
}

.o-form--has-errors [type="submit"] {
  pointer-events: none;
  color: var(--color-text-3);
  background-color: var(--color-text-2);
}

.o-form--has-errors .o-form__action-group--submit {
  cursor: not-allowed;
}

.o-form__title {
  text-align: center;
}

.o-input {
  padding: 1rem 0;
  border-bottom: solid 0.1em var(--color-text-3);
  width: 100%;
}

.o-form__input-box {
  position: relative;
}

.o-label,
.o-form__input-notes {
  position: absolute;
  left: 0;
}

.o-label {
  top: 1rem;
  transform-origin: left center;
}

.o-input:focus ~ .o-label,
.o-input--has-value ~ .o-label {
  transform: translateY(-125%) scale(0.75);
}

.o-form__input-notes {
  top: calc(100% + 0.5rem);
  width: 100%;
  text-align: right;
}

.o-form__notes {
  font-size: 0.84em;
}

.o-form__note--success {
  color: var(--color-success);
}

.o-form__note--fail {
  color: var(--color-fail);
}

.c-form-subscription form {
  gap: 0.5rem;
}

.c-form-subscription .o-input {
  font-size: 0.75em;
}

.o-form__notes--centered,
.o-form__action-group--centered {
  text-align: center;
}

.shopify-challenge__button,
.o-form__action--bordered {
  padding: 0.5rem 1rem;
  border: 0.1em solid var(--color-text);
  text-transform: uppercase;
  letter-spacing: 0.18em;
}

.o-form__action--bordered {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  gap: 0.5rem;
  text-align: center;
  justify-content: center;
  justify-items: center;
}

.o-form__action--cta {
  color: var(--color-text-bg);
  background-color: var(--color-text);
  border-color: transparent;
}

.o-form__action--cta:hover,
.o-form__action--cta:focus {
  color: var(--color-text-bg);
  background-color: var(--color-text-focus);
}

.c-form-login,
.c-form-register {
  display: grid;
  justify-content: center;
}

.c-form-login form,
.c-form-register form {
  width: 30rem;
}

.c-form-register form {
  grid-auto-flow: unset;
  grid-template-columns: repeat(6, 1fr);
}

.c-form-register form > * {
  grid-column: span 6;
}

.c-form-register form .o-form__input-box--first-name,
.c-form-register form .o-form__input-box--last-name {
  grid-column: span 3;
}
