.c-header {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.c-page-content {
  padding-top: var(--announcement-height);
}

.c-header__logo,
.c-header__icon {
  display: none;
}

.c-header__logo--alt,
.c-header__icon--alt {
  display: block;
}

.c-header__button {
  color: var(--color-text-bg);
}

.c-header__button:hover,
.c-header__button:focus {
  color: var(--color-text-bg-focus);
}
