.c-collections {
  display: grid;
  grid-auto-flow: row;
  padding-left: var(--side-distance-1);
  padding-right: var(--side-distance-1);
}

.c-collections__list--hor-scroll {
  padding-bottom: 2rem;
  grid-auto-flow: column;
  overflow-x: auto;
}

.c-collections__list--hor-scroll .c-collections__item {
  width: calc((100vw - (var(--side-distance-1) * 2)) / 4);
}
