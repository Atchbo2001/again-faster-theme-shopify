.c-collections {
  display: grid;
  grid-auto-flow: row;
  padding-left: var(--side-distance-1);
  padding-right: var(--side-distance-1);
}

.c-products {
  overflow-x: auto;
}

.c-products--hor-scroll .c-products__list {
  padding-bottom: 2rem;
  grid-auto-flow: column;
}

.c-products--hor-scroll .c-products__item {
  width: calc((100vw - (var(--side-distance-1) * 2)) / 4);
}
