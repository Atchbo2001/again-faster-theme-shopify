.c-collections {
  display: grid;
  grid-auto-flow: row;
  padding-left: var(--side-distance-1);
  padding-right: var(--side-distance-1);
}

.c-products {
  overflow-x: auto;
}

.c-products__list {
  display: grid;
  grid-auto-flow: column;
  padding-bottom: 2rem;
}

.c-products__item {
  width: calc((100vw - (var(--side-distance-1) * 2)) / 4);
}

.c-product__button {
  display: grid;
  grid-auto-flow: row;
  padding: 1rem;
  font-size: 0.7rem;
}

.c-product__image {
  width: 100%;
  height: calc((100vw - (var(--side-distance-1) * 2)) / 4);
  object-fit: cover;
}

.c-product__title {
  justify-content: center;
}

.c-product__title-icon {
  height: 1rem;
}

.c-product__button:not(:hover):not(:focus) .c-product__title-icon {
  opacity: 0;
}

.c-product__button:hover .c-product__title-text,
.c-product__button:focus .c-product__title-text {
  color: var(--color-text-focus);
}

.c-product__button:hover .c-product__title-icon,
.c-product__button:focus .c-product__title-icon {
  opacity: var(--opacity-icon-focus);
}
