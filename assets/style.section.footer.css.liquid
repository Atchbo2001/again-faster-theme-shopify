.c-footer {
  background-color: var(--color-bg-2);
  padding: var(--side-distance-3)
    calc(var(--side-distance-4) + var(--side-distance-1)) var(--side-distance-1)
    calc(var(--side-distance-4) + var(--side-distance-1));
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  gap: var(--side-distance-3);
}

.c-footer__newsletter,
.c-footer__links {
  grid-column: span 6;
}

.c-footer__copyright {
  grid-column: span 12;
  text-align: center;
  font-weight: 300;
  color: var(--color-text-3);
  font-size: 0.84em;
}

.c-footer__newsletter {
  display: grid;
  grid-auto-flow: row;
  gap: 0.5rem;
  align-content: start;
}

.c-footer__title,
.c-footer__list__button {
  text-transform: uppercase;
  letter-spacing: 0.12em;
  font-family: var(--font-4);
  font-weight: var(--font-4-weight);
  font-size: 0.76em;
  color: var(--color-text-2);
}

.c-socials {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-top: 1rem;
}

.c-socials__icon {
  height: 0.92rem;
}

.c-socials__button:not(:hover):not(:focus) .c-socials__icon {
  filter: saturate(0);
}

.c-footer__list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--side-distance-4);
}

.c-footer__list__button {
  margin-bottom: 1rem;
}

.c-footer__list__button:not([href]),
.c-footer__list__button[href="#"] {
  pointer-events: none;
}

.c-footer__list-nested-1 {
  font-size: 0.92em;
}

.c-footer__list__button-nested-1 {
  padding-top: 0.35rem;
  padding-bottom: 0.35rem;
  color: var(--color-text-2);
}
