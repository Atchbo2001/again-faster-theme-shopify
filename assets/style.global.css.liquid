html {
  font-family: var(--font-1);
  font-weight: var(--font-1-weight);
}

body {
  background-color: var(--color-text-bg);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  gap: var(--side-distance-4);
}

body > div:not([class]) {
  position: absolute;
}

.c-page-top,
.c-page-bottom {
  position: relative;
  display: grid;
  grid-auto-flow: row;
  gap: var(--side-distance-4);
}

.c-page-top {
  z-index: 300;
}

.c-page-bottom {
  z-index: 200;
}

.c-page-content {
  display: grid;
  grid-auto-flow: row;
  gap: var(--side-distance-4);
}

.o-section {
  position: relative;
}

.o-button {
  color: var(--color-text);
  display: inline-flex;
  gap: 0.5em;
  align-items: center;
}

.o-button:hover,
.o-button:focus {
  color: var(--color-text-focus);
}

.c-arrow-icon {
  height: 1em;
}
