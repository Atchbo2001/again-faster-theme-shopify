<!doctype html>
<html lang="{{ request.locale.iso_code }}">

    <head>
        {{ content_for_header }}
        {% include 'head' %}
        {{ 'style.template.index.css' | asset_url | stylesheet_tag }}
    </head>

    <body class="s-template-{{ template.name }}">

        <div class="c-page-top">

            {% section 'header' %}

            <main class="c-page-content" role="main">
                {{ content_for_layout }}
            </main>

        </div>

        <div class="c-page-bottom">
            {% section 'footer' %}
        </div>

    </body>

</html>
